####################### UPTIME #######################
[module/uptime]
type = custom/script
exec = $HOME/.config/polybar/uptime.sh
interval = 30
format-prefix = " "
format = <label>
format-padding = 2


####################### MUSIC #######################

[module/spotify]
type = custom/script
interval = 5
format-prefix = "   "
format = "<label>"
exec = $HOME/.config/polybar/spotify.py
format-foreground = ${colors.green}
# label =  %output:0:30:%
click-left = playerctl play-pause

[module/playpause]
type = custom/script
exec = $HOME/.config/polybar/spot.sh
format-padding = 1
interval = 2
format = <label>
click-left = playerctl play-pause
format-foreground = ${colors.green}

